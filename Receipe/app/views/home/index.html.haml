%navbar.navbar-default.navbar-fixed-top.navbar-inverse
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "#"}
        = image_tag "receipe.png", src: 'receipe.png', class: "img-responsive", id: "navbar-logo"

    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li.active
          %a{:href => "#"}
            Home
            %span.sr-only (current)
        %li
          %a{:href => "#"} About
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", :role => "button"}
            Categories
            %span.caret
          %ul.dropdown-menu{role: 'menu'}
            - Category.all.each do |category|
              %li
                = category.name
            / %li
            /   %a{:href => "#"} Action
            / %li
            /   %a{:href => "#"} Another action
            / %li
            /   %a{:href => "#"} Something else here
            / %li.divider{:role => "separator"}
            / %li
            /   %a{:href => "#"} Separated link
            / %li.divider{:role => "separator"}
            / %li
            /   %a{:href => "#"} One more separated link
        %li
          = link_to 'Personal Receipes', dishes_path
      %form.navbar-form.navbar-left
        .form-group
          %input.form-control{:placeholder => "Search", :type => "text"}/
        %button.btn.btn-default{:type => "submit"} Submit
      .navbar-nav.navbar-right
        - if user_signed_in?
          -#%i.fa.fa-user{"aria-hidden" => "true"}
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :role => "button"}
              %i.fa.fa-user{"aria-hidden" => "true"}
              %span.caret
            %ul.dropdown-menu{role: 'menu'}
              %li
                My Receipes
              %li
                My Reviews
              %li
                My comments
              %li
                Profile
              %li
                Post Receipe
          = link_to 'Sign out', destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default navbar-btn'
        - else
          = link_to 'Sign in', new_user_session_path, class: 'btn btn-default navbar-btn'
          = link_to 'Sign up', new_user_registration_path, class: 'btn btn-default navbar-btn'
      / %ul.nav.navbar-nav.navbar-right
      /   %li
      /     %a{:href => "#"} Link
      /   %li.dropdown
      /     %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
      /       Dropdown
      /       %span.caret
      /     %ul.dropdown-menu
      /       %li
      /         %a{:href => "#"} Action
      /       %li
      /         %a{:href => "#"} Another action
      /       %li
      /         %a{:href => "#"} Something else here
      /       %li.divider{:role => "separator"}
      /       %li
      /         %a{:href => "#"} Separated link
    / /.navbar-collapse
  / /.container-fluid

